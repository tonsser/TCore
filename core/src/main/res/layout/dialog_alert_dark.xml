<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_nalert_header_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/dialog_nalert_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:typeface="normal" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/dialog_nalert_top_btn_seperator_fl"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_nalert_left_btn"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16dp" />

            <FrameLayout
                android:id="@+id/dialog_nalert_btn_seperator_fl"
                android:layout_width="1dp"
                android:layout_height="match_parent">
            </FrameLayout>

            <Button
                android:id="@+id/dialog_nalert_right_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>